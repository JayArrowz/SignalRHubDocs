<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>net9.0;net8.0;net7.0;net6.0;net5.0</TargetFrameworks>
		<LangVersion>12.0</LangVersion>
		<Nullable>enable</Nullable>
		<Description>Auto-generated documentation and interactive testing interface for ASP.NET Core SignalR hubs. Provides Swagger-like functionality for real-time applications with automatic hub discovery, schema generation, multi-protocol support, authentication handling, and live message monitoring.</Description>
		<Summary>Auto-generated documentation and testing interface for SignalR hubs with Swagger-like functionality</Summary>
		<Authors>JayArrowz</Authors>
		<Company>JayArrowz</Company>
		<Product>SignalRHubDocs</Product>
		<Copyright>Copyright © JayArrowz 2024</Copyright>
		<PackageProjectUrl>https://github.com/JayArrowz/SignalRHubDocs</PackageProjectUrl>
		<RepositoryUrl>https://github.com/JayArrowz/SignalRHubDocs</RepositoryUrl>
		<RepositoryType>git</RepositoryType>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<PackageTags>signalr;documentation;swagger;testing;realtime;websockets;hubs;aspnetcore;interactive;api-docs;schema;messagepack;authentication;streaming;live-testing</PackageTags>
		<PackageReleaseNotes>See https://github.com/JayArrowz/SignalRHubDocs/releases for release notes.</PackageReleaseNotes>
		<GeneratePackageOnBuild>false</GeneratePackageOnBuild>
		<IncludeSymbols>true</IncludeSymbols>
		<SymbolPackageFormat>snupkg</SymbolPackageFormat>
		<PublishRepositoryUrl>true</PublishRepositoryUrl>
		<EmbedUntrackedSources>true</EmbedUntrackedSources>
		<DebugType>portable</DebugType>
		<NoWarn>$(NoWarn);CS1591</NoWarn>
	</PropertyGroup>

	<ItemGroup>
		<None Remove="Templates\testing.html" />
	</ItemGroup>

	<ItemGroup>
		<EmbeddedResource Include="Templates\testing.html" />
		<None Include="../README.md" Pack="true" PackagePath="\" />
		<None Include="../LICENSE" Pack="true" PackagePath="\" />
	</ItemGroup>

	<ItemGroup>
		<FrameworkReference Include="Microsoft.AspNetCore.App" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="PolySharp" Version="1.15.0">
			<PrivateAssets>all</PrivateAssets>
			<IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
		</PackageReference>
		<PackageReference Include="Microsoft.SourceLink.GitHub" Version="8.0.0" PrivateAssets="All" />
		<PackageReference Include="MinVer" Version="6.0.0" PrivateAssets="All" />
	</ItemGroup>
</Project>